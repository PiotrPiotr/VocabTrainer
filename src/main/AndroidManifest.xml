<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.piotr.piotr.vocabtrainer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemCreation"
            android:label="@string/title_activity_item_creation" >
        </activity>
        <activity
            android:name=".DrillCreation"
            android:label="@string/title_activity_drill_creation" >
        </activity>
        <activity
            android:name=".SetScheduledNotification"
            android:label="@string/title_activity_set_scheduled_notification"
            android:parentActivityName=".DrillCreation" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.piotr.piotr.vocabtrainer.DrillCreation" />
        </activity>
    </application>

</manifest>
